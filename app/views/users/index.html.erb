<h1>Users</h1>

<%- if can? :invite, User %>
  <p><%= link_to "Invite User", new_user_invitation_path, class: "btn btn-primary" %>
<% end -%>

<table class="table">
  <% @users.each do |user| %>
  <tr>
    <td>
      <%= user.name %>
    </td>
    <td>
      <%= user.email %>
    </td>
    <td>
      <%- if can? :edit, user %>
        <%= link_to "Edit", edit_user_path(user), class: "btn btn-info btn-xs" %>
      <% elsif can? :show, user %>
        <%= link_to "Show", user_path(user), class: "btn btn-default btn-xs" %>
      <% end -%>
    </td>
  </tr>
  <% end  %>
</table>
