<div class="field form-group">
  <%= f.label :name, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>

<%- if can? :manage, User %>
  <div class="field form-group">
    <%= f.label :role, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :role, User::ROLES, class: "form-control" %>
    </div>
  </div>
<% end -%>
